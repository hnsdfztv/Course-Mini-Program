/* pages/index/index.wxss */
.container {
    padding-bottom: 40rpx;
}

/* 轮播图样式 */
.banner-section {
    margin-bottom: 30rpx;
}

.banner-swiper {
    width: 100%;
    height: 400rpx;
}

.banner-item {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="30" cy="25" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="60" cy="15" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
}

.banner-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 0 60rpx;
}

.banner-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 20rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.banner-subtitle {
    font-size: 28rpx;
    color: #ffffff;
    opacity: 0.95;
}

/* 区块样式 */
.section {
    margin-bottom: 40rpx;
    padding: 0 20rpx;
}

.section-header {
    margin-bottom: 30rpx;
    text-align: center;
}

.section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 10rpx;
}

.section-subtitle {
    font-size: 24rpx;
    color: #999999;
    text-transform: uppercase;
    letter-spacing: 2rpx;
}

/* 核心理念网格 */
.ideas-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
}

.idea-card {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
    text-align: center;
    transition: all 0.3s;
}

.idea-card:active {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.idea-icon {
    font-size: 60rpx;
    margin-bottom: 20rpx;
}

.idea-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 15rpx;
}

.idea-desc {
    font-size: 24rpx;
    color: #666666;
    line-height: 1.6;
}

/* 快捷入口 */
.quick-links {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.quick-link-item {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
}

.quick-link-item:active {
    transform: translateX(8rpx);
}

.quick-icon {
    font-size: 60rpx;
    margin-right: 30rpx;
}

.quick-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 8rpx;
}

.quick-desc {
    font-size: 24rpx;
    color: #ffffff;
    opacity: 0.9;
}

/* 新闻列表 */
.news-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.news-item {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s;
}

.news-item:active {
    transform: scale(0.98);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.news-tag {
    display: inline-block;
    padding: 6rpx 16rpx;
    background: linear-gradient(135deg, #FFE5E5 0%, #FFD0D0 100%);
    color: #C8232C;
    font-size: 22rpx;
    border-radius: 20rpx;
    margin-bottom: 15rpx;
}

.news-title {
    font-size: 28rpx;
    color: #333333;
    line-height: 1.6;
    margin-bottom: 15rpx;
}

.news-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.news-date {
    font-size: 24rpx;
    color: #999999;
}

.news-arrow {
    font-size: 28rpx;
    color: #C8232C;
    font-weight: bold;
}

/* 底部说明 */
.footer {
    text-align: center;
    padding: 40rpx 20rpx;
    margin-top: 40rpx;
}

.footer-text {
    font-size: 28rpx;
    color: #333333;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.footer-subtext {
    font-size: 24rpx;
    color: #999999;
}