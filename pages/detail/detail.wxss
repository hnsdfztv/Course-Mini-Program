/* pages/detail/detail.wxss */
.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
}

/* 加载状态 */
.loading-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.loading-icon {
    font-size: 100rpx;
    margin-bottom: 30rpx;
    animation: rotate 2s linear infinite;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

.loading-text {
    font-size: 28rpx;
    color: #999999;
}

/* 详情内容 */
.detail-content {
    padding-bottom: 160rpx;
}

/* 头部 */
.detail-header {
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    padding: 60rpx 40rpx 40rpx;
    color: white;
}

.header-icon {
    font-size: 80rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.header-title {
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 15rpx;
    line-height: 1.4;
}

.header-subtitle {
    font-size: 28rpx;
    text-align: center;
    opacity: 0.9;
    margin-bottom: 30rpx;
    line-height: 1.5;
}

.header-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 20rpx;
    margin-bottom: 20rpx;
}

.meta-item {
    font-size: 24rpx;
    opacity: 0.9;
    padding: 8rpx 16rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20rpx;
}

.meta-value {
    font-size: 32rpx;
    font-weight: bold;
    padding: 10rpx 20rpx;
    background: rgba(255, 255, 255, 0.25);
    border-radius: 25rpx;
}

/* 标签 */
.tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 15rpx;
    justify-content: center;
}

.tag {
    padding: 10rpx 20rpx;
    background: rgba(255, 255, 255, 0.25);
    border-radius: 20rpx;
    font-size: 24rpx;
    backdrop-filter: blur(10rpx);
}

/* 主体内容 */
.detail-body {
    padding: 40rpx;
}

.content-section {
    background: white;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 25rpx;
    box-shadow: 0 4rpx 20rpx rgba(200, 35, 44, 0.08);
}

.section-title,
.section-subtitle {
    font-size: 32rpx;
    font-weight: bold;
    color: #C8232C;
    margin-bottom: 20rpx;
    padding-bottom: 15rpx;
    border-bottom: 3rpx solid #FFE8E8;
}

.section-text {
    font-size: 28rpx;
    color: #333333;
    line-height: 2;
    text-align: justify;
    white-space: pre-wrap;
}

/* 底部操作 */
.detail-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    padding: 20rpx 40rpx;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
    display: flex;
    gap: 20rpx;
}

.action-btn {
    flex: 1;
    height: 90rpx;
    border-radius: 45rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10rpx;
    font-size: 28rpx;
    border: none;
}

.action-btn.primary {
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    color: white;
}

.action-btn.secondary {
    background: white;
    color: #C8232C;
    border: 2rpx solid #C8232C;
}

.btn-icon {
    font-size: 32rpx;
}

.btn-text {
    font-size: 28rpx;
    font-weight: 500;
}

/* 错误状态 */
.error-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
}

.error-icon {
    font-size: 120rpx;
    margin-bottom: 30rpx;
}

.error-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 15rpx;
}

.error-desc {
    font-size: 28rpx;
    color: #999999;
    margin-bottom: 40rpx;
}

.retry-btn {
    width: 300rpx;
    height: 80rpx;
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    color: white;
    border-radius: 40rpx;
    font-size: 28rpx;
    border: none;
}