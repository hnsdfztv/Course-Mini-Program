/* pages/policy/policy.wxss */
.container {
    padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    padding: 60rpx 40rpx 50rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.header-title {
    font-size: 44rpx;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 10rpx;
}

.header-subtitle {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.9);
    text-transform: uppercase;
    letter-spacing: 2rpx;
}

/* 标签切换 */
.tabs-container {
    background: #ffffff;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tabs-scroll {
    white-space: nowrap;
}

.tabs {
    display: inline-flex;
    padding: 0 20rpx;
}

.tab-item {
    display: inline-block;
    padding: 12rpx 32rpx;
    margin: 0 8rpx;
    font-size: 28rpx;
    color: #666666;
    border-radius: 40rpx;
    transition: all 0.3s;
    white-space: nowrap;
}

.tab-item.active {
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    color: #ffffff;
    font-weight: bold;
}

/* 政策列表 */
.policy-list {
    padding: 0 20rpx;
}

.policy-card {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
}

.policy-card:active {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.policy-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.policy-category {
    display: inline-block;
    padding: 8rpx 20rpx;
    background: linear-gradient(135deg, #FFE5E5 0%, #FFD0D0 100%);
    color: #C8232C;
    font-size: 24rpx;
    border-radius: 30rpx;
    font-weight: bold;
}

.policy-date {
    font-size: 24rpx;
    color: #999999;
}

.policy-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 20rpx;
    line-height: 1.5;
}

.policy-summary {
    font-size: 26rpx;
    color: #666666;
    line-height: 1.8;
    margin-bottom: 20rpx;
    text-align: justify;
}

.policy-tags {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20rpx;
}

.policy-tags .tag {
    padding: 8rpx 16rpx;
    background: #F5F5F5;
    color: #666666;
    font-size: 22rpx;
    border-radius: 20rpx;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
}

.policy-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20rpx;
    border-top: 1rpx solid #F0F0F0;
    margin-bottom: 20rpx;
}

.policy-impact {
    flex: 1;
    display: flex;
    align-items: flex-start;
}

.impact-icon {
    font-size: 24rpx;
    margin-right: 8rpx;
}

.impact-text {
    font-size: 24rpx;
    color: #666666;
    line-height: 1.6;
}

.policy-stats {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.read-icon {
    font-size: 24rpx;
    margin-right: 6rpx;
}

.read-count {
    font-size: 24rpx;
    color: #999999;
}

.policy-action {
    text-align: right;
    font-size: 26rpx;
    color: #C8232C;
    font-weight: bold;
}

/* 空状态 */
.empty-state {
    text-align: center;
    padding: 120rpx 40rpx;
}

.empty-icon {
    font-size: 120rpx;
    margin-bottom: 30rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #999999;
}

/* 页面底部 */
.page-footer {
    padding: 40rpx 20rpx;
    margin-top: 20rpx;
}

.footer-tip {
    background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
    border-left: 6rpx solid #C8232C;
    padding: 30rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: flex-start;
}

.tip-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
}

.footer-tip text:not(.tip-icon) {
    flex: 1;
    font-size: 26rpx;
    color: #666666;
    line-height: 1.8;
}