/**app.wxss**/
page {
    background-color: #f5f5f5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
    min-height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 20rpx;
    padding-left: 20rpx;
    border-left: 6rpx solid #C8232C;
}

.card-content {
    font-size: 28rpx;
    color: #666666;
    line-height: 1.8;
    text-align: justify;
}

/* 按钮样式 */
.btn-primary {
    background: linear-gradient(135deg, #C8232C 0%, #E63946 100%);
    color: #ffffff;
    border-radius: 50rpx;
    padding: 24rpx 48rpx;
    font-size: 30rpx;
    border: none;
    box-shadow: 0 4rpx 12rpx rgba(200, 35, 44, 0.3);
}

.btn-secondary {
    background: #ffffff;
    color: #C8232C;
    border: 2rpx solid #C8232C;
    border-radius: 50rpx;
    padding: 24rpx 48rpx;
    font-size: 30rpx;
}

/* 标签样式 */
.tag {
    display: inline-block;
    padding: 8rpx 20rpx;
    background: #FFF5F5;
    color: #C8232C;
    border-radius: 30rpx;
    font-size: 24rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

/* 列表项样式 */
.list-item {
    background: #ffffff;
    padding: 30rpx;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s;
}

.list-item:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.page-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333333;
    text-align: center;
    margin: 30rpx 0;
}

.section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
    margin: 30rpx 0 20rpx;
    padding-left: 20rpx;
    border-left: 8rpx solid #C8232C;
}

/* 文本样式 */
.text-primary {
    color: #C8232C;
}

.text-secondary {
    color: #666666;
}

.text-muted {
    color: #999999;
}

/* 图标样式 */
.icon {
    width: 48rpx;
    height: 48rpx;
    vertical-align: middle;
}

.icon-large {
    width: 80rpx;
    height: 80rpx;
}

/* 徽章样式 */
.badge {
    display: inline-block;
    min-width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 8rpx;
    background: #C8232C;
    color: #ffffff;
    font-size: 20rpx;
    text-align: center;
    border-radius: 16rpx;
}

/* 分割线 */
.divider {
    height: 1rpx;
    background: #e5e5e5;
    margin: 30rpx 0;
}

/* 加载动画 */
.loading {
    text-align: center;
    padding: 40rpx;
    color: #999999;
    font-size: 28rpx;
}